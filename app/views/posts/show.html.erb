<h1>
	<%= @post.title %><br>
	<%= @post.description %>
</h1>

<ul>
	<% @post.comments.each do |comment| %>
	<li>
		<%= comment.body %>
		<%= link_to "[Delete]", post_comment_path(comment.post.id, comment.id),method: :delete, data:{ confirm: "本当に消してもいいですか?" } %>
	</li>
	<% end %>
	<li>
	<%= form_for [@post, @post.comments.build] do |f| %>
	<%= f.text_field :body %>
	<%= f.submit %>
	<% end %>
	</li>
</ul>